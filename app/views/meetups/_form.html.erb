<%= form_for(@meetup) do |f| %>
<% if @meetup.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@meetup.errors.count, "error") %> prohibited this meetup from being saved:</h2>

      <ul>
        <% @meetup.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-md-10">
    <div class="panel panel-transparent">
      <div class="panel-heading">
        <h2 align="center">New PegUp</h2>
      </div>
      <div class="panel-body">
        <div class="form-group">
          <%= f.label "When" %><br>
          <%= f.datetime_local_field :datetime, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, rows: 5, class:"form-control", placeholder:"Where/Why etc..." %>
        </div>
        <div class="cant-see-me">
          <%= f.label :user_id %><br>
          <%= f.text_field :user_id, value: current_user.id %>
        </div>
      </div>
      <div class="panel-footer">
        <div class="action-group">
          <%= f.submit "PegIt", class:"btn btn-default" %> |
          <%= link_to "Back", :back, class: "btn btn-default" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
