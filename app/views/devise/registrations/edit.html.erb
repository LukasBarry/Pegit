

   <div class="panel panel-transparent">
    <div class="panel-heading">
      <h2 align="center"><%= current_user.name %></h2>
         <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
         <%= devise_error_messages! %>
    </div>
    <div class="panel-body">
      <form class="form-horizontal">
       <div class="row form-group">

        <%= f.label :username, class:"col-sm-2 control-label" %>
        <%= f.text_field :username, class:"form-control", placeholder: "@Username", class:"col-sm-4" %>
        <%= f.label :email, class:"col-sm-2 control-label" %>
        <%= f.email_field :email, class:"form-control", autofocus: true, class:"col-sm-4" %>
       </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="row form-group">
         <%= f.label :password, class:"col-sm-2 control-label" %>
         <%= f.password_field :password, class:"form-control", autocomplete: "off", class:"col-sm-4", placeholder:"leave blank if you don't want to change it" %>

        <%= f.label :password_confirmation, class:"col-sm-2" %>
        <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "off", class:"col-sm-4" %>
      </div>

      <div class="row form-group">
        <%= f.label :name, class:"col-sm-2" %>
        <%= f.text_field :name, class:"form-control", placeholder: "First and Last name", class:"col-sm-4" %>
        <%= f.label :location, class:"col-sm-2" %>
        <%= f.text_area :location, class:"form-control", placeholder: "Where-ness of you", rows: 2, class:"col-sm-4" %>
      </div>
      <div class="row form-group">
        <%= f.label :bio, class:"col-sm-2" %>
        <%= f.text_area :bio, class:"form-control", placeholder: "Roughly: what's yer deal?", rows: 6, class:"col-sm-4" %>
        <%= f.label :current_password, class:"col-sm-2" %>
        <%= f.password_field :current_password, class:"form-control", autocomplete: "off", class:"col-sm-4", placeholder:"we need your current password to confirm your changes" %>
      </div>
      <div class="col-sm-3 field form-group">
        <%= f.label "Photo" %><br>
        <%= f.file_field :avatar %>
        <% if current_user.avatar_file_name != nil %>
          <%= image_tag current_user.avatar.url(:thumb) %>
         <%= f.label "Remove Photo" %>
         <%= f.check_box :remove_avatar %>
         <% end %>

      </div>
      <div class="col-xs-2"></div>
      <div class="action-group">
        <%= f.submit "PegIt", class:"btn btn-default" %>
      </div>
      <% end %>
      <br>
      <h3>Cancel my account</h3>
      <p>Unhappy? <%= link_to "Un-PegIt", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-default" %></p>
     </form>
    </div>
    <div class="panel-footer">
      <%= link_to "Back", :back, class: "btn btn-default" %>
    </div>
</div>
